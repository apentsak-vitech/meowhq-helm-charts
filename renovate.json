{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["helmv3", "github-actions"],
  "baseBranches": ["main"],
  "labels": ["renovate"],
  "packageRules": [
    {
      "path": "charts/**",
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "extends": [":semanticCommitTypeAll(feat)"],
      "stabilityDays": 7,
      "rangeStrategy": "pin",
      "enabled": true
    },
    {
      "matchManagers": ["github-actions"],
      "stabilityDays": 30,
      "enabled": true
    }
  ]
}
