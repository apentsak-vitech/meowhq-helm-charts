{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["helmv3", "github-actions"],
  "baseBranches": ["main"],
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "extends": [":semanticCommitTypeAll(feat)"],
      "separateMinorPatch": true,
      "groupName": "devDependencies (patch)",
      "groupSlug": "dev-dependencies-patch",
      "stabilityDays": 7,
      "enabled": true
    },
    {
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "extends": [":semanticCommitTypeAll(feat)"],
      "matchUpdateTypes": ["minor"],
      "groupName": "devDependencies (minor)",
      "groupSlug": "dev-dependencies-minor",
      "stabilityDays": 7,
      "enabled": true
    },
    {
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "extends": [":semanticCommitTypeAll(major)"],
      "matchUpdateTypes": ["major"],
      "groupName": "devDependencies (major)",
      "groupSlug": "dev-dependencies-major",
      "stabilityDays": 7,
      "enabled": true
    },
    {
      "matchManagers": ["github-actions"],
      "stabilityDays": 30,
      "enabled": true
    }
  ]
}
